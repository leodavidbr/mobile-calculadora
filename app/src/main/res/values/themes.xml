<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculadoraApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/material_on_surface_disabled</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="ButtonOperator" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>
    <style name="ButtonEqual" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/cardview_dark_background</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Theme.CalculadoraApp" parent="Base.Theme.CalculadoraApp" />
</resources>
